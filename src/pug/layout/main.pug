include ../includes/mixins.pug
-
  var pagesLink = [
  {
  home: '/',
  characteristics: './characteristics.html',
  contacts: './contacts.html',
  terrace: './terrace.html'
  }
  ];
block variable
doctype html
html(lang="uk")
  head
    meta(charset='utf-8')
    meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0")
    //- Edge и ряд мобильных браузеров слишком умны. Отключим это.
    meta(name='format-detection', content='telephone=no')
    meta(name='format-detection', content='date=no')
    meta(name='format-detection', content='address=no')
    meta(name='format-detection', content='email=no')
    meta(content='notranslate', name='google')
    //- Фавиконки (https://realfavicongenerator.net)
    //- link(rel='apple-touch-icon', sizes='180x180', href='/img/favicon/apple-touch-icon.png')
    //- link(rel='icon', type='image/png', sizes='32x32', href='/img/favicon/favicon-32x32.png')
    link(rel='icon', type='image/png', sizes='16x16', href='../static/favicon.ico')
    //- link(rel='manifest', href='/img/favicon/site.webmanifest')
    //- link(rel='mask-icon', href='/img/favicon/safari-pinned-tab.svg', color='#5bbad5')
    //- meta(name='msapplication-TileColor', content='#5bbad5')
    //- meta(name='theme-color', content='#000')
    //- meta(name='msapplication-navbutton-color', content='#000')
    //- meta(name='apple-mobile-web-app-status-bar-style', content='#000')
    block meta
    block head

  body(class= class_page id= id_page)
    // START SVG SPRITE
    include ../../assets/svg-sprite/sprite/symbol_sprite.php
    // END SVG SPRITE
    // START LOADER
    include ../includes/loader.html
    // END LOADER
    // START POPUP MODAL
    a.pageup(href="#up")
      svg(width="52" height="52" viewBox="0 0 52 52" fill="none" xmlns="http://www.w3.org/2000/svg")
        circle(cx="26" cy="26" r="25" stroke="#ECEDEF")
        path(d="M19 25.6415C20.6038 24.7925 24.1509 22.0755 25.5094 18" stroke="#4D4D4C")
        path(d="M32.0189 25.6415C30.4151 24.7925 26.868 22.0755 25.5095 18" stroke="#4D4D4C")
        path(d="M25.5095 35L25.5095 17" stroke="#4D4D4C")

    include ../includes/popup.pug
    include ../components/form/form.pug
    // END POPUP MODAL
    // START MENU
    include ../includes/menu.pug
    // END MENU

    .toast-wrapper(data-toast-wrapper)
    // START HEADER
    block header

    // END HEADER
    .page__inner(data-scroll-container)
      .page__content
        block content

      //.page__footer-wrapper
        // START FOOTER
      block footer
        // END FOOTER
    block scripts
